<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bignerdranch.android.mdbfirstminiappproject.MainActivity">

    <ImageView
        android:id="@+id/memberPic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/firstChoice"/>

    <Button
        android:id="@+id/endGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="End Game"/>

    <Button
        android:id="@+id/fourthChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/endGameButton"
        android:text=""
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/thirdChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_above="@+id/fourthChoice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/secondChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/thirdChoice"
        android:layout_alignEnd="@+id/thirdChoice"
        android:layout_alignRight="@+id/thirdChoice"
        android:text=""/>

    <TextView
        android:id="@+id/scoreBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/endGameButton"
        android:layout_alignBottom="@+id/endGameButton"
        android:layout_toLeftOf="@+id/gameScore"
        android:layout_toStartOf="@+id/gameScore"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"/>

    <TextView
        android:id="@+id/gameScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/scoreBoard"
        android:layout_alignBottom="@+id/scoreBoard"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"/>

    <Button
        android:id="@+id/firstChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/secondChoice"
        android:layout_centerHorizontal="true"
        android:text=""/>

    <TextView
        android:id="@+id/TimeRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="Time Remaining:"
        android:textColor="@color/colorAccent"
        tools:text="Time Remaining:"
        android:layout_alignBottom="@+id/scoreBoard"
        android:layout_toRightOf="@+id/endGameButton"
        android:layout_toEndOf="@+id/endGameButton"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TimeRemaining"
        android:layout_alignBottom="@+id/TimeRemaining"
        android:layout_toEndOf="@+id/TimeRemaining"
        android:layout_toRightOf="@+id/TimeRemaining"
        />

</RelativeLayout>
