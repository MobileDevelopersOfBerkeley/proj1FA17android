<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="0dp"
    tools:context="com.bignerdranch.android.mdbfirstminiappproject.WelcomeScreen"
    android:background="@color/colorMajor">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:background="@color/colorMinor"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="72dp"
            android:layout_below="@+id/startButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="9dp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:background="@android:color/background_light"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="42dp"
            android:layout_above="@+id/textView4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:background="@android:color/background_light"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="384dp"
            android:layout_alignBottom="@+id/startButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="29dp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:background="@color/colorMinor"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="354dp"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="19dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:background="@color/hybridPurple"
            tools:layout_editor_absoluteX="230dp"
            tools:layout_editor_absoluteY="241dp"
            android:layout_below="@+id/gameTitle"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="48dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:background="@color/deeperPurple"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="163dp"
            android:layout_above="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="40dp"/>

        <TextView
            android:id="@+id/gameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="114dp"
            android:fontFamily="sans-serif-condensed"
            android:text="MDB Trivia"
            android:textColor="@android:color/background_light"
            android:textSize="42sp"
            android:typeface="normal"/>

        <Button
            android:id="@+id/startButton"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gameTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="148dp"
            android:background="@color/hybridPurple"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/white"
            android:text="Start"
            android:textSize="24sp"/>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
