<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bignerdranch.android.mdbfirstminiappproject.MainActivity"
    android:background="@color/colorMinor">

    <ImageView
        android:id="@+id/memberPic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/firstChoice"
        android:layout_below="@+id/time"/>

    <Button
        android:id="@+id/endGameButton"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/fourthChoice"
        android:background="@android:color/holo_green_light"
        android:text="End Game"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/firstChoice"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_above="@+id/thirdChoice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent"
        android:padding="20dp"
        android:paddingBottom="20dp"
        android:paddingEnd="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:text=""
        android:textSize="18sp"
        android:layout_toLeftOf="@+id/secondChoice"
        android:layout_toStartOf="@+id/secondChoice"/>

    <Button
        android:id="@+id/secondChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/firstChoice"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/memberPic"
        android:background="@color/colorPrimaryDark"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text=""
        android:textSize="18sp"
        android:layout_toRightOf="@+id/thirdChoice"
        android:layout_toEndOf="@+id/thirdChoice"/>

    <Button
        android:id="@+id/thirdChoice"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_above="@+id/endGameButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_purple"
        android:text=""
        android:textSize="18sp"/>

    <Button
        android:id="@+id/fourthChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thirdChoice"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/thirdChoice"
        android:background="@android:color/holo_blue_light"
        android:text=""
        android:textSize="18sp"
        android:layout_toRightOf="@+id/thirdChoice"
        android:layout_toEndOf="@+id/thirdChoice"/>

    <TextView
        android:id="@+id/scoreBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/firstChoice"
        android:layout_toEndOf="@+id/firstChoice"/>

    <TextView
        android:id="@+id/gameScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/scoreBoard"
        android:layout_alignBottom="@+id/scoreBoard"
        android:layout_toEndOf="@+id/scoreBoard"
        android:layout_toRightOf="@+id/scoreBoard"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/TimeRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="sans-serif"
        android:text="Time Remaining:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:text="Time Remaining:"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TimeRemaining"
        android:layout_alignBottom="@+id/TimeRemaining"
        android:layout_toEndOf="@+id/TimeRemaining"
        android:layout_toRightOf="@+id/TimeRemaining"
        />

</RelativeLayout>
